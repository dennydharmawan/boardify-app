{
  "name": "@boardify/backend",
  "version": "1.0.0",
  "description": "",
  "tsup": {
    "entry": [
      "src/server.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "scripts": {
    "dev": "tsup src/server.ts --watch --onSuccess 'node dist/server.js | pino-pretty'",
    "build": "tsup src/server.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/config/**/*.{ts,tsx,md}\"",
    "generate:model": "sequelize-auto -o \"./src/models/krom-cat\" -c \"./sequelize/sequelize-auto/connection.js\" -l ts -a \"./sequelize/sequelize-auto/model.json\" --cm p --sg -T SequelizeMeta",
    "generate:model:table": "npm run generate:model -- -t"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "env-var": "^7.4.1",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "express-ruid": "^1.1.5",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "http-graceful-shutdown": "^3.1.13",
    "http-status-codes": "^2.3.0",
    "jsend": "^1.1.0",
    "morgan": "^1.10.0",
    "node-emoji": "^2.1.3",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "reflect-metadata": "^0.2.1",
    "typedi": "^0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-typescript-paths": "^0.0.33",
    "pino-pretty": "^10.3.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tsup": "^7.3.0",
    "typescript": "^5.1.6"
  }
}
